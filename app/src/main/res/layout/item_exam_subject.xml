<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/prime_blue"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:gravity="center"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/txt_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                fontPath="fonts/avenir-next-bold.ttf"
                android:textColor="@color/white"
                android:text="Latin"/>

            <ImageView
                android:id="@+id/img_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/settings"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_exams_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/txt_q1_value_ly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:background="@drawable/selector_white_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_q1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_rounded_red"
                        android:gravity="center"
                        android:maxEms="2"
                        android:minEms="2"
                        android:text="Q1"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>


                    <TextView
                        android:id="@+id/txt_q1_value"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center|right"
                        android:maxEms="3"

                        android:minEms="3"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/txt_s_value_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_white_background"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_s"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_rounded_red"
                        android:gravity="center"
                        android:maxEms="2"
                        android:minEms="2"
                        android:text="S"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        />


                    <TextView
                        android:id="@+id/txt_s_value"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:maxEms="3"
                        android:minEms="3"
                        android:textColor="@color/colorPrimaryDark"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/txt_q2_value_ly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_white_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_q2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_rounded_red"
                        android:gravity="center"
                        android:maxEms="2"
                        android:minEms="2"
                        android:text="Q2"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>


                    <TextView
                        android:id="@+id/txt_q2_value"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center|right"
                        android:maxEms="3"

                        android:minEms="3"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txt_sm_value_ly"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_white_background"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_sm"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_rounded_red"
                        android:gravity="center"
                        android:maxEms="2"
                        android:minEms="2"
                        android:text="SM"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        />


                    <TextView
                        android:id="@+id/txt_sm_value"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"

                        android:maxEms="3"
                        android:minEms="3"
                        android:textColor="@color/colorPrimaryDark"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:id="@+id/txt_q3_value_ly"
                android:background="@drawable/selector_white_background"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_q3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_rounded_red"
                    android:gravity="center"
                    android:maxEms="2"
                    android:minEms="2"
                    android:text="Q3"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>


                <TextView
                    android:id="@+id/txt_q3_value"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center|right"
                    android:maxEms="3"

                    android:minEms="3"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/txt_q4_value_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_white_background"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_q4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_rounded_red"
                    android:gravity="center"
                    android:maxEms="2"
                    android:minEms="2"
                    android:text="Q4"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>


                <TextView
                    android:id="@+id/txt_q4_value"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center|right"
                    android:maxEms="3"

                    android:minEms="3"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_exams"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_written"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_white_background"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/written_exam_text"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"/>


            <TextView
                android:id="@+id/txt_writ_oral"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_white_background"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/written_with_opt_oral_text"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/txt_oral"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_white_background"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/oral_text"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <zielabi.icon_worldwide.com.zielabi.views.TextSeekBar
                android:id="@+id/seek"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>


    </LinearLayout>
</layout>
